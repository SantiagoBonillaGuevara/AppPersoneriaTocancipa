<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CustomCardView">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:padding="24dp">

            <!-- Lunes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lunes"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <EditText
                        android:id="@+id/etInicioLunes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Hora inicio"
                        android:focusable="false"
                        android:inputType="none"
                        android:drawableStart="@drawable/ic_clock"
                        android:background="@drawable/bg_edittext"/>

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/etFinLunes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Hora fin"
                        android:focusable="false"
                        android:inputType="none"
                        android:drawableStart="@drawable/ic_clock"
                        android:background="@drawable/bg_edittext"/>
                </LinearLayout>
            </LinearLayout>
            <!-- Martes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Martes"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <EditText
                        android:id="@+id/etInicioMartes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Hora inicio"
                        android:focusable="false"
                        android:inputType="none"
                        android:drawableStart="@drawable/ic_clock"
                        android:background="@drawable/bg_edittext"/>

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/etFinMartes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Hora fin"
                        android:focusable="false"
                        android:inputType="none"
                        android:drawableStart="@drawable/ic_clock"
                        android:background="@drawable/bg_edittext"/>
                </LinearLayout>
            </LinearLayout>
            <!-- Miercoles -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Miercoles"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <EditText
                        android:id="@+id/etInicioMiercoles"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Hora inicio"
                        android:focusable="false"
                        android:inputType="none"
                        android:drawableStart="@drawable/ic_clock"
                        android:background="@drawable/bg_edittext"/>

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/etFinMiercoles"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Hora fin"
                        android:focusable="false"
                        android:inputType="none"
                        android:drawableStart="@drawable/ic_clock"
                        android:background="@drawable/bg_edittext"/>
                </LinearLayout>
            </LinearLayout>
            <!-- Jueves -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jueves"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <EditText
                        android:id="@+id/etInicioJueves"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Hora inicio"
                        android:focusable="false"
                        android:inputType="none"
                        android:drawableStart="@drawable/ic_clock"
                        android:background="@drawable/bg_edittext"/>

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/etFinJueves"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Hora fin"
                        android:focusable="false"
                        android:inputType="none"
                        android:drawableStart="@drawable/ic_clock"
                        android:background="@drawable/bg_edittext"/>
                </LinearLayout>
            </LinearLayout>
            <!-- Viernes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Viernes"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <EditText
                        android:id="@+id/etInicioViernes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Hora inicio"
                        android:focusable="false"
                        android:inputType="none"
                        android:drawableStart="@drawable/ic_clock"
                        android:background="@drawable/bg_edittext"/>

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/etFinViernes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Hora fin"
                        android:focusable="false"
                        android:inputType="none"
                        android:drawableStart="@drawable/ic_clock"
                        android:background="@drawable/bg_edittext"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnVolver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Volver"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/gray" />

                <Button
                    android:id="@+id/btnSiguiente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Siguiente"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/button" />

            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_close"
            android:layout_gravity="end|top"
            app:tint="@color/gray" />
        <LinearLayout
            android:id="@+id/stepIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="24dp"
            android:layout_marginEnd="12dp">

            <TextView
                android:id="@+id/step1"
                style="@style/StepCircleText"
                android:text="1"
                android:background="@drawable/step_circle_active"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/step2"
                style="@style/StepCircleText"
                android:text="2"
                android:background="@drawable/step_circle_active"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/step3"
                style="@style/StepCircleText"
                android:text="3"
                android:background="@drawable/step_circle_active"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/step4"
                style="@style/StepCircleText"
                android:text="4"
                android:background="@drawable/step_circle_inactive"
                android:layout_marginEnd="12dp"/>
        </LinearLayout>
    </FrameLayout>

</androidx.cardview.widget.CardView>