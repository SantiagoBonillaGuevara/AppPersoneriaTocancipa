<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".CRUDUsuarios">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/escudo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gestión de Usuarios"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:textStyle="bold"
            />

        <!-- Contenedor con imágenes y botones -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_gravity="center"
            android:gravity="center">

            <!-- Crear Usuario -->
            <GridLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:columnCount="1"
                android:rowCount="2">

                <ImageView
                    android:id="@+id/imgCrearUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/escudo" />

                <Button
                    android:id="@+id/btnCrearUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill"
                    android:backgroundTint="@color/negroSecundario"
                    android:text="Crear"
                    android:textColor="@color/white" />
            </GridLayout>

            <!-- Consultar Usuario -->
            <GridLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:columnCount="1"
                android:rowCount="2">

                <ImageView
                    android:id="@+id/imgConsultarUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/escudo" />

                <Button
                    android:id="@+id/btnConsultarUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill"
                    android:backgroundTint="@color/negroSecundario"
                    android:text="Consultar"
                    android:textColor="@color/white" />
            </GridLayout>

            <!-- Modificar Usuario -->
            <GridLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:columnCount="1"
                android:rowCount="2">

                <ImageView
                    android:id="@+id/imgModificarUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/escudo" />

                <Button
                    android:id="@+id/btnModificarUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill"
                    android:backgroundTint="@color/negroSecundario"
                    android:text="Modificar"
                    android:textColor="@color/white" />
            </GridLayout>

            <!-- Eliminar Usuario -->
            <GridLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:columnCount="1"
                android:rowCount="2">

                <ImageView
                    android:id="@+id/imgEliminarUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/escudo" />

                <Button
                    android:id="@+id/btnEliminarUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill"
                    android:backgroundTint="@color/negroSecundario"
                    android:text="Eliminar"
                    android:textColor="@color/white" />
            </GridLayout>
        </GridLayout>

        <!-- Espacio para empujar el botón hacia abajo -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnSalir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/negroSecundario"
            android:text="Salir"
            android:textColor="@color/white"
            />


    </LinearLayout>

</LinearLayout>