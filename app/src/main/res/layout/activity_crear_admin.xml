<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/escudo"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            >
        </ImageView>

        <TextView
            android:id="@+id/txtAnuncio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear o Gestionar"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:paddingBottom="15dp"
            />

        <!-- Consulta -->
        <LinearLayout
            android:id="@+id/gridConsultar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="1"
                android:layout_gravity="fill"
                android:text="Consultar Administrador"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:gravity="bottom"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/txtConsultar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/grisClaro"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:hint="Digite el n칰mero de documento"
                    android:inputType="number"
                    android:padding="10dp"
                    android:background="@drawable/edittext_format"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"/>

                <Button
                    android:id="@+id/btnConsultar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Consultar"
                    android:textSize="15dp"
                    android:layout_gravity="right"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/negroSecundario"
                />
            </LinearLayout>
        </LinearLayout>

        <!-- Nombres y Apellidos-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombres y Apellidos"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            />

        <EditText
            android:id="@+id/txtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/grisClaro"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:inputType="text"
            android:padding="10dp"
            android:background="@drawable/edittext_format"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:singleLine="true"
            />

        <!-- Contrase침a -->
        <TextView
            android:id="@+id/tvClave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contrase침a"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtClave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColorHint="@color/grisClaro"
                android:hint="M칤nimo 6 caracteres"
                android:textSize="15dp"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:padding="10dp"
                android:background="@drawable/edittext_format"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="15dp"
                android:singleLine="true"/>

            <!-- Bot칩n de Mostrar/Ocultar Contrase침a -->
            <Button
                android:id="@+id/btnTogglePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游녜"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/white"/>
        </LinearLayout>

        <!-- Confirmar Contrase침a -->
        <TextView
            android:id="@+id/tvConfirmarClave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar Contrase침a"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtConfirmarClave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColorHint="@color/grisClaro"
                android:textSize="15dp"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:padding="10dp"
                android:background="@drawable/edittext_format"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="15dp"
                android:singleLine="true"/>

            <!-- Bot칩n de Mostrar/Ocultar Contrase침a -->
            <Button
                android:id="@+id/btnToggleCheckPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游녜"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/white"/>
        </LinearLayout>

        <!-- Documento de Identidad -->
        <TextView
            android:id="@+id/tvDocumento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Documento de Identidad"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            />

        <EditText
            android:id="@+id/txtDocumento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/grisClaro"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:inputType="number"
            android:hint="Digite sin comas ni puntos"
            android:background="@drawable/edittext_format"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:singleLine="true"
            />

        <!-- Correo Electr칩nico -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo Electr칩nico"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            />

        <EditText
            android:id="@+id/txtCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/grisClaro"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:inputType="text"
            android:padding="10dp"
            android:background="@drawable/edittext_format"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:singleLine="true"
            />

        <!-- Estado -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            />

        <Spinner
            android:id="@+id/spEstado"
            android:background="@drawable/spinner_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:spinnerMode="dropdown"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            />

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnSalir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:backgroundTint="@color/negroSecundario"
                android:text="Volver"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                />
            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:backgroundTint="@color/negroSecundario"
                android:text="Crear Cuenta"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                />

            <Button
                android:id="@+id/btnModificar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:backgroundTint="@color/negroSecundario"
                android:text="Modificar"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                />

            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:backgroundTint="@color/negroSecundario"
                android:text="Eliminar"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                />

        </LinearLayout>
    </LinearLayout>
</ScrollView>